# ============================================================
# Fake News Detection System - Secrets Configuration Template
# ============================================================
# IMPORTANT: Copy this file to 'secrets.toml' and fill in values
# DO NOT commit secrets.toml to version control!
# ============================================================

# ===================
# API KEYS
# ===================

# HuggingFace API Key (Required)
# Get at: https://huggingface.co/settings/tokens
HF_API_KEY = "hf_your_huggingface_api_key_here"

# Google Gemini API Key (Primary LLM)
# Get at: https://aistudio.google.com/app/apikey
GEMINI_API_KEY = "your_gemini_api_key_here"

# Groq API Key (Fallback LLM - used if Gemini fails)
# Get at: https://console.groq.com/keys
GROQ_API_KEY = "your_groq_api_key_here"

# ===================
# DAILY QUOTAS
# ===================

# Daily request limits
HF_DAILY_QUOTA = 30000
GEMINI_DAILY_QUOTA = 1500
GROQ_DAILY_QUOTA = 14400

# ===================
# ENSEMBLE WEIGHTS
# ===================
# Weights must sum to 1.0
# LLM weight is shared between Gemini and Groq (fallback)
[ensemble_weights]
huggingface = 0.40
llm = 0.35
heuristic = 0.25

# ===================
# CLASSIFICATION THRESHOLDS
# ===================
FAKE_THRESHOLD = 0.7
REAL_THRESHOLD = 0.3
MIN_CONFIDENCE = 0.6

# ===================
# TEXT LIMITS
# ===================
MAX_TEXT_LENGTH = 5000
MIN_TEXT_LENGTH = 50

# ===================
# PERFORMANCE
# ===================
CACHE_TTL_HOURS = 24
REQUEST_TIMEOUT = 30
MODEL_TIMEOUT = 10
